<UserControl x:Class="AreGamersStreaming.View.StartControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="300">
    <StackPanel>
        <Menu Background="LightGray" Margin="0,0,0,5">
            <MenuItem Header="_File">
                <MenuItem Header="Configs"/>
                <MenuItem Header="Quit"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="Info"/>
                <MenuItem Header="Help"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Button x:Name="AddStream" Height="25" Width="70" Margin="10,10,0,5"  HorizontalAlignment="Left">Add Stream</Button>
            <TextBox x:Name="AddStreamInput" Height="25" Width="175" Margin="0,10,20,5" HorizontalAlignment="Right" Padding="0"/>
        </Grid>
        <Grid>
        <Button x:Name="DelStream" Height="25" Width="70" Margin="10,10,0,5" HorizontalAlignment="Left">Del Stream</Button>
        <ComboBox x:Name="DelList" Height="25" Width="175" Margin="0,10,20,5" HorizontalAlignment="right"></ComboBox>
        </Grid>    
        <CheckBox x:Name="BootStart" Content="Start at startup" Margin="20,10,10,10" HorizontalAlignment="Left"/>
        <CheckBox x:Name="StartMin" Content="Minamize at start" Margin="20,10,10,10" HorizontalAlignment="Left"/>
    </StackPanel>
       
</UserControl>
