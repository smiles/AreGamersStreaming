<Window x:Class="AreGamersStreaming.View.ConfigWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#FF6441A5"
        Title="ConfigWin" Height="125" Width="175">
    <StackPanel>
        <Label Margin="5,5,5,5">How often to check?</Label>
        <Slider x:Name="HowOftenCheck" Margin="5,5,5,5" Minimum="1" Maximum="30" 
                TickPlacement="BottomRight" TickFrequency="1" AutoToolTipPlacement="TopLeft"></Slider>
    </StackPanel>
</Window>
